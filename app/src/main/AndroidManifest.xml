            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".Profile.SettingActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Profile.FollowActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
