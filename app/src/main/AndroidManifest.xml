            android:name=".Login.NewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Login.ForgetPassEmailActivity"
            android:exported="false" />
        <activity
            android:name=".Login.ForgetPassPhoneActivity"
            android:exported="false" />
        <activity
            android:name=".Login.ForgetPasswordActivity"
